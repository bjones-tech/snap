@model IEnumerable<SNAP.Models.Persistent.NewHire>

@{
    ViewBag.Title = "New Hire Requests";
    ViewBag.Heading = String.Format("Submitted by {0}", User.Identity.Name);
}

<br />

<h2 class="inline-element">@ViewBag.Title</h2>

<span class="btn btn-default btn-sm click-submit ajax-heading" style="margin-left: 20px; margin-bottom: 10px;">Show All</span>

<h4 class="ajax-heading" style="margin-top: 0">@ViewBag.Heading</h4>

<hr />

@using (Html.BeginForm("AllRequests", "NewHires", FormMethod.Get))
{
    <div class="form-inline">
        <div class="form-group">
            @Html.Editor("FirstName", new { htmlAttributes = new { @class = "form-control keyup-submit", placeholder = "First Name" } })
        </div>
        <div class="form-group">
            @Html.Editor("LastName", new { htmlAttributes = new { @class = "form-control keyup-submit", placeholder = "Last Name" } })
        </div>
    </div>
}

<br />

<div id="ajaxPartial">
    @Html.Partial("_IndexPartial", Model)
</div>