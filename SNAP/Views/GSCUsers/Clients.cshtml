@model IEnumerable<SNAP.Models.Persistent.GSCClient>

@{
    ViewBag.Title = "GSC Clients";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Add Client", "CreateClient", null, new { @class = "btn btn-default" })
</p>

<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InternalEmailAddress)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InternalEmailAddress)
        </td>
        <td>
            @Html.ActionLink("Update", "EditClient", new { id=item.ID }, new { @class = "btn btn-info" })
        </td>
    </tr>
}

</table>
