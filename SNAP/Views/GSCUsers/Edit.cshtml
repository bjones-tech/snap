@model SNAP.Models.Persistent.GSCUser

@{
    ViewBag.Title = "Update User";
    ViewBag.Heading = Model.Name;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@ViewBag.Heading</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.GSCClientID, "Client", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("GSCClientID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GSCClientID, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.GUID)
        @Html.HiddenFor(model => model.EmailAddress)
        @Html.HiddenFor(model => model.Name)
        @Html.HiddenFor(model => model.Title)
        @Html.HiddenFor(model => model.Department)
        @Html.HiddenFor(model => model.Manager)
        @Html.HiddenFor(model => model.ManagersEmail)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
}