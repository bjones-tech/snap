@model IEnumerable<SNAP.Models.Helpers.ADUser>

@{
    ViewBag.Title = "User Search";
}

<h2>@ViewBag.Title</h2>

<hr />

@using (Html.BeginForm("Index", "ADUsers", FormMethod.Get))
{
    <div class="form-inline">
        <div class="form-group">
            @Html.Editor("FirstName", new { htmlAttributes = new { @class = "form-control", placeholder = "First Name" } })
        </div>
        <div class="form-group">
            @Html.Editor("LastName", new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name" } })
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-default click-submit">Search</button>
        </div>
    </div>
}

<br />

<div id="ajaxPartial">
    @Html.Partial("_IndexPartial", Model)
</div>