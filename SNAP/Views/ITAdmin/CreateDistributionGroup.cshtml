@model SNAP.Models.Helpers.DistributionGroup

@{
    ViewBag.Title = "Create Distribution Group";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Alias)

    <div class="form-horizontal">
        <h4>@ViewBag.Heading</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Format, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Format, new SelectList(ViewBag.Formats, "Key", "Value"), new { @class = "form-control inline-element" })
                <span class="glyphicon glyphicon-info-sign" data-toggle="tooltip" data-html="true" data-placement="bottom" title="@ViewBag.Tooltip"></span><br />
                @Html.ValidationMessageFor(model => model.Format, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Alias, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 remove-side-padding">
                <div class="col-md-2">
                    @Html.DropDownListFor(model => model.AliasPrefix, new SelectList(ViewBag.Prefixes), new { @class = "form-control inline-element" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Alias1, new { htmlAttributes = new { @class = "form-control inline-element" } })
                    @Html.EditorFor(model => model.Alias2, new { htmlAttributes = new { @class = "form-control inline-element" } })
                    <br />@Html.ValidationMessageFor(model => model.Alias, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Preview, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Preview, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.Preview, "", new { @class = "text-danger" })
            </div>
        </div>

        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.ManagersEmail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ManagersEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ManagersEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <hr />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary overlay-click" />
            </div>
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/snap-distributionGroup")
    @Scripts.Render("~/bundles/snap-emailaddress")
}