@model IEnumerable<SNAP.Models.Persistent.Office>

@{
    ViewBag.Title = "Office Directory";
}

<h2>@ViewBag.Title</h2>

<hr />

@using (Html.BeginForm("Index", "Offices", FormMethod.Get))
{
    <div class="form-inline">
        <div class="form-group">
            @Html.Editor("Name", new { htmlAttributes = new { @class = "form-control keyup-submit", placeholder = "Office Name" } })
        </div>
        <div class="form-group">
            @Html.DropDownList("LeaseRange", new SelectList(ViewBag.LeaseRanges, "Value", "Text"), "Lease Range", new { @class = "form-control change-submit", placeholder = "Lease Range" })
        </div>
    </div>    
}

<br />

<div id="ajaxPartial">
    @Html.Partial("_IndexPartial", Model)
</div>